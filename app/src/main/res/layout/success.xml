<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/successTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/success_title"
        android:textColor="@color/black"
        android:paddingTop="30dp"
        android:layout_marginTop="30dp"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/successSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/successTitle"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/success_sub_title"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/icon_success"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/successSubTitle"
        android:layout_centerHorizontal="true"
        android:src="@drawable/done" />

