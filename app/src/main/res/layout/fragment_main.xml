<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.pathways_international.ts.ui.fragment.MainFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageview_container"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ic_camera" />


            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="30dp"
                android:text="@string/locations_data"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="County" />

            <Spinner
                android:id="@+id/county_spinner"
                android:layout_width="176dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Constituency" />

            <Spinner
                android:visibility="invisible"
                android:id="@+id/constituency_spinner"
                android:layout_width="176dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ward" />

            <Spinner
                android:visibility="invisible"
                android:id="@+id/ward_spinner"
                android:layout_width="176dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PollStation" />


            <Spinner
                android:visibility="invisible"
                android:id="@+id/poll_spinner"
                android:layout_width="176dp"
                android:layout_height="wrap_content" />

            <AutoCompleteTextView
                android:id="@+id/county"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="County"
                android:padding="10dp"
                android:visibility="gone" />

            <AutoCompleteTextView
                android:visibility="gone"
                android:id="@+id/constituency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Constituency"
                android:padding="10dp" />

            <AutoCompleteTextView
                android:id="@+id/ward"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Ward"
                android:padding="10dp" />

            <AutoCompleteTextView
                android:visibility="gone"
                android:id="@+id/polling_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Polling Station"
                android:padding="10dp" />

            <include layout="@layout/checkboxes" />


            <Button
                android:id="@+id/submit_button"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:text="@string/submit"
                android:textColor="#fff"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
